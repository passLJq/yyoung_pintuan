/* pages/coupon/coupon.wxss */
@import "../../common/iconfont.wxss";
view, text {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  line-height: 32rpx;
}
/* 遮罩 */
.mark {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(51, 51, 51, .7);
  z-index: 999;
}

.mainn {
  background-color:#fff;
  font-size: 24rpx;
  line-height: 32rpx;
  padding: 0 30rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  z-index: 9999;
  box-sizing: border-box;
}

.tit {
  width: 100%;
  border-bottom: 2rpx solid #F2F2F2;
  height: 80rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color:#333333;
  font-weight: 500;
}
.type .title {
    font-size: 28rpx;
    color:#333333;
    font-weight: 500;
    margin: 25rpx 0;
  }
.type {
  width: 100%;
}
 .type .conitem {
      font-size:26rpx;
      color:rgba(102,102,102,1);
      min-width: 180rpx;
      padding: 0 18rpx;
      line-height: 50rpx;
      display: flex;
      align-items: center;
      justify-content: center;
      border:2rpx solid rgba(155, 155, 155, 1);
      border-radius:25rpx;
 }
 .conitem.active {
        border-color: #E69888;
        color: #E69888;
  }
 .conitem.close {
        background:rgba(155,155,155,0.1);
        border-color: rgba(102, 100, 100, 0.1);
        color: #999;
        opacity: .8;
 }
  .conitem + .conitem {
      margin-left: 20rpx;
  }
  

.type.closeAll .conton .conitem {
    background:rgba(155,155,155,0.1);
    border-color: rgba(102, 100, 100, 0.1);
    color: #999;
    opacity: .8;
  }
.type .conton {
    width: 100%;
    padding-bottom: 25rpx;
    display: flex;
}
.flexx {
  display: flex;
