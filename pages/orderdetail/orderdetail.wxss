/* pages/orderdetail/orderdetail.wxss */
@import "../../common/font-awesome.wxss";
page{background-color: #F6F6FA;}
.marginBt10{margin-bottom: 20rpx; background-color: #fff;}
.order_type_top_container{height:200rpx;background:rgba(255,234,224,1); text-align: center; }
.order_type_bottom_container{height:178rpx;background:rgba(255,255,255,1);border-radius:32rpx 32rpx 0px 0px; position: relative; top: -40rpx;}
.arc_container{box-sizing: border-box;border-radius: 50%;width:44rpx;height:44rpx;border: 4rpx solid rgba(205,168,110,0.4);margin-right: 42rpx;}
.arc_container>text{display: block;width: 28rpx; height: 28rpx;border-radius: 50%; background-color: #CDA86E;box-sizing: border-box;}

.address_box{ background-color: #fff;}
.address_container{height: 88rpx; line-height: 88rpx;}
.address_content{width: 100%; height: 150rpx; padding-top: 20rpx; padding-bottom: 20rpx;}

/*商品详情  */
.bottom_border{ border-bottom: 1px solid #F6F6FA;}
.product_list{padding: 24rpx 0;}
.product_img_container{width: 148rpx; height: 148rpx; margin-right: 24rpx;}
.product_img_container>image{width: 148rpx; height: 148rpx;}
.container_other{height: 74rpx; line-height: 74rpx; text-align: right; border-bottom: 2rpx solid #DEDEE1;}
.topay,.cancle{display: inline-block; text-align: center; color: #E69888; margin-left: 20rpx; border: 2rpx solid #E69888; border-radius: 80rpx; width: 160rpx; height: 58rpx; line-height: 58rpx; font-size: 24rpx;}
.cancle{border-color: #999; color: #999;}

/*底部信息  */
.footer_container{background-color: #fff; margin-bottom: 60rpx; font-size: 24rpx; color: #666464; padding: 20rpx 32rpx;}
.footer_container>view{line-height: 48rpx;}
.copy_btn{width: 120rpx; height: 50rpx; border: 2rpx solid #D8D8D8; border-radius: 30rpx; text-align: center; line-height: 50rpx;}


.headdd {
  width: 100%;
  box-sizing: border-box;
  height: 220rpx;
  display: flex;
  align-items: center;
  background-color: #ffeae1;
}
.headdd > view {
  width: 188rpx;
  height: 200rpx;
  margin-left: 267rpx;
}
.headdd > text {
  font-size: 32rpx;
  color: #E69888;
  margin-left: 114rpx;
}
.headdd > view > image {
  width: 100%;
}

.messg {
  width: 100%;
  box-sizing: border-box;
  /* height: 260rpx; */
  padding: 0 44rpx;
  background-color: #fff;
}

.messitm {
  width: 100%;
  min-height: 130rpx;
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}
.messitm image {
  width: 90rpx;
  height:90rpx;
  /* margin-left: 25rpx; */
}
.messitm > view {
  margin-top: 10rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  width: 100%;
}
.messitm > .vieew > text {
  color:#9B9B9B;
  font-size: 24rpx;
  max-width: 500rpx;
  line-height: 36rpx;
}
.messitm + .messitm {
  border-top: 2rpx solid #DEDEE1; 
}

.color_666 {
  color: #666464 !important;
}
.font_12 {
  font-size: 24rpx;
}

.btnbox {
	width: 100%;
	text-align: right;
	padding: 10rpx 0;
	border-bottom: 2rpx solid #F6F6FA;
	
}