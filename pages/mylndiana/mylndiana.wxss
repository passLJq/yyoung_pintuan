page {
  background-color: #f6f6fa;
  width: 100%;
  height: 100%;
}
view {
  box-sizing: border-box;
}
.my {
  width: 100%;
}
.my .itm {
  width: 100%;
  background-color: #fff;
}
.my .itm + .itm {
  margin-top: 20rpx;
}
.my .itm:nth-child(1) {
  padding-top: 54rpx;
}
.my .head {
  width: 100%;
  height: 96rpx;
  padding: 0 40rpx 0 30rpx;
}
.my .head text:nth-child(1) {
  font-size: 24rpx;
  color: #999;
}
.my .head text:nth-child(2) {
  font-size: 28rpx;
  color: #ff5541;
}

/* 横线 */
.line {
  width: 690rpx;
  height: 2rpx;
  background-color: #fbfbfc;
}

.my .itm .content {
  width: 100%;
  height: 280rpx;
}
.my .itm .content .pic {
  width: 192rpx;
  height: 192rpx;
  margin-top: 20rpx;
  margin-left: 30rpx;
}
.my .itm .content .pic image {
  width: 100%;
  height: 100%;
}
.my .itm .data {
  width: 482rpx;
  margin-top: 22rpx;
  margin-left: 16rpx;
}
.my .itm .data .title {
  font-size: 24rpx;
  color: #333;
  height: 96rpx;
  width: 100%;
  line-height: 44rpx;
}
.my .itm .data .progress {
  width: 440rpx;
  height: 20rpx;
  border-radius: 14rpx;
  background-color: #f6f6fa; 
  margin-top: 8rpx;
  overflow: hidden;
  margin-left: 4rpx;
}
.my .itm .data .progress view {
  height: 100%;
}
.my .itm .data .join {
  width: 440rpx;
  margin-left: 4rpx;
  margin-top: 10rpx;
}
.my .itm .data .join text {
  font-size: 20rpx;
  color: #999;
}
.my .itm .data .price {
  width: 100%;
  height: 50rpx;
  color: #FF5541;
  margin-top: 20rpx;
}
.my .itm .data .price text:nth-child(1) {
  font-size: 24rpx;
  font-weight: 600;
}
.my .itm .data .price text:nth-child(2) {
  font-size: 36rpx;
  font-weight: 600;
}
.my .itm .data .price text:nth-child(3) {
  font-size: 20rpx;
  color: #999;
  margin-left: 30rpx;
}
.my .itm .btnGroup {
  width: 100%;
  height: 96rpx;
  padding-right: 30rpx;
}
.my .itm .btnGroup .btn {
  width: 160rpx;
  height: 58rpx;
  font-size: 24rpx;
  color: #fff;
  /* border: 2rpx solid #ff5541; */
  background-color: #427161;
  border-radius: 32rpx;
}
.my .itm .btnGroup .btn + .btn {
  margin-left: 20rpx;
}

/* 号码弹窗 */
.showNum {
  width: 600rpx;
  height: 600rpx;
  border-radius: 16rpx;
  position: fixed;
  top: 164rpx;
  left: 50%;
  background-color: #fff;
  transform: translateX(-50%);
  z-index: 1001;
}
.showNum .title {
  width: 258rpx;
  height: 80rpx;
  border-radius: 20rpx;
  font-size: 36rpx;
  color: #fff;
  font-weight: 600;
  text-align: center;
  line-height: 80rpx;
  margin-top: -40rpx;
}
.showNum .content {
  width: 306rpx;
  height: 372rpx;
  margin-top: 60rpx;
  overflow: scroll;
  
}

::-webkit-scrollbar {display:none}

.showNum .content .item {
  width: 100%;
  height: 48rpx;
}
.showNum .content .item + .item {
  margin-top: 40rpx;
}
.showNum .content .item text:nth-child(1) {
  font-size: 34rpx;
  color: #333;
}
.showNum .content .item text:nth-child(2) {
  font-size: 28rpx;
}
.showNum .btn {
  width: 100%;
  height: 128rpx;
}
.showNum .btn view {
  width: 480rpx;
  height: 80rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  border-radius: 40rpx;
}