@import "../../Component/sharebox/sharebox.wxss";

page {
  background-color: #fff
}

.box {
  width: 100%;
  height: 100%;
  background-color: #fff;
  padding-bottom: 60rpx;
}
/* 分享说明 */
.explain {
  width: 100%;
  margin-top: 208rpx;
}
.explain > text {
  font-size: 36rpx;
  color: #333;
}
.explain .num {
  font-size: 48rpx;
  font-weight: 600;
  color: #FF5541;
  margin: 0 2rpx;
}

/* 助力区域 */
.helper {
  justify-content: space-around;
  width: 60%;
  margin: 80rpx 0;
}
.helper view {
  height: 100%;
}
.helper view image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}
.helper view text {
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}

/* 分享按钮 */
.btn {
  width: 655rpx;
  height: 88rpx;
  font-size: 34rpx;
  font-weight: 600;
  color: #fff;
  border-radius: 44rpx;
}