@import "../../common/iconfont.wxss";
@import "../../common/font-awesome.wxss";

view {
  box-sizing: border-box;
}

/* 活动规则 */
.rule {
  width:140rpx;
  height:48rpx;
background:rgba(235,97,0,1);
  border-radius:24rpx 0 0 24rpx;
  text-align: center;
  line-height: 48rpx;
  font-size: 24rpx;
  color: #fff;
  position: absolute;
  top: 52rpx;
  right: 0;
  z-index: 99;
}


/* 拼团说明 */

.explain {
  height: 96rpx;
  padding: 0 30rpx;
}

.explain .step {
  width: 44rpx;
  height: 44rpx;
}

.explain .step + .step {
  margin-left: 14rpx;
}

.explain .step view {
  font-size: 22rpx;
  display: block;
  background-color: rgba(232, 55, 74, 1);
  width: 32rpx;
  height: 32rpx;
  color: #fff;
  -webkit-border-radius: 50%;
  border-radius: 50%;
}

.explain text {
  color: #fff;
  font-size: 24rpx;
  margin-left: 10rpx;
}

.explain .right {
  width: 44rpx;
  height: 44rpx;
  margin-left: 14rpx;
}

.explain .right image {
  width: 100%;
  height: 100%;
}

/* 导航nav */

.nav {
  width: 750rpx;
  height: 70rpx;
  overflow: hidden;
  margin-top: 20rpx;
  background-color: #fff;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.nav .scroll-view-item {
  width: 176rpx;
  height: 70rpx;
  display: inline-block;
  font-size: 28rpx;
  line-height: 70rpx;
  color: #9B9B9B
}

.nav .scroll-view-item.active {
  color: #427161;
}

.nav .bottomBar {
  width: 64rpx;
  height: 6rpx;
  background: #FAAFA0;
  -webkit-border-radius: 3px;
  border-radius: 3px;
  position: absolute;
  bottom: 0;
  transform: translateX(-50%);
}

/* 商品列表 */

.productList {
  width: 750rpx;
}

.productList .list-item {
  width: 750rpx;
  height: 330rpx;
  background-color: #fff;
  padding: 44rpx 38rpx 0 38rpx;
}

.productList .list-item + .list-item {
  margin-top: 20rpx;
}

.productList .list-item .pic {
  width: 200rpx;
  height: 200rpx;
}

.productList .list-item .pic image {
  width: 100%;
  height: 100%;
}

.productList .list-item .proDetails {
  width: 454rpx;
  height: 242rpx;
  margin-left: 20rpx;
  position: relative;
}

.productList .list-item .proDetails .slogan {
  width: 100%;
  max-height: 90rpx;
  font-size: 30rpx;
  line-height: 42rpx;
}
.productList .list-item .proDetails .slogan view {
  display: inline-block;
  /* width: 80rpx; */
  padding: 0 14rpx;
  height: 32rpx;
  font-size: 20rpx;
  color: #fff;
  -webkit-border-radius: 16rpx;
  border-radius: 16rpx;
  line-height: 32rpx;
  margin: 0 8rpx;
  transform: translateY(-2rpx);
  -webkit-transform: translateY(-2rpx);
}
.productList .list-item .member {
  width: 100%;
  height: 64rpx;
  position: absolute;
  top: 94rpx;
  left: 0;
}
.productList .member .member-avatar {
  max-width: 230rpx;
  height: 100%;
  /* transform: translateY(-10rpx);
  -webkit-transform: translateY(-10rpx); */
}
.productList .member .member-avatar image {
  width: 64rpx;
  height: 64rpx;
  box-sizing: border-box;
  -webkit-border-radius: 50%;
  border-radius: 50%;
  border: 4rpx solid #fff;
}
.productList .member .member-avatar image + image {
  margin-left: -18rpx;
}
.productList .member text {
  font-size: 24rpx;
  margin-right: 20rpx;
}

.productList .priceView {
  width: 100%;
}
.productList .priceView .priceText {
  /* width: 212rpx; */
  height: 50rpx;
}
.productList .priceView .priceText text:nth-child(1) {
  font-size: 36rpx;
  font-weight: 600;
  margin-right: 36rpx;
  color: #CDA86E;
}
.productList .priceView .priceText text:nth-child(2) {
  font-size: 24rpx;
  color: #999;
}
.productList .priceView .btn {
  width: 160rpx;
  height: 60rpx;
  font-size: 24rpx;
  color: #fff;
  line-height: 60rpx;
  text-align: center;
  border-radius:60px;
  -webkit-border-radius:60px;
  background:rgba(66,113,97,1)!important;
}

/* 活动规则弹窗 */
.ruleDetails {
  width: 600rpx;
  height: 800rpx;
  background-color: #fff;
  -webkit-border-radius: 32rpx;
  border-radius: 32rpx;
  position: fixed;
  top: 160rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
  transform: translateX(-50%);
  z-index: 1000;
}

.ruleDetails .title {
  width: 258rpx;
  height: 80rpx;
  border-radius:16rpx;
  -webkit-border-radius:16rpx;
  font-size: 36rpx;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  position: absolute;
  top: -40rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
  transform: translateX(-50%);
  background:rgba(235,97,0,1) !important;
}

.ruleDetails .content {
  width: 520rpx;
  height: 610rpx;
  overflow: scroll;
  line-height: 40rpx;
}

.ruleDetails .content text {
  font-size: 28rpx;
  
}

.ruleDetails .bottom {
  width: 100%;
  height: 128rpx;
  background-color: #fff;
  border-radius: 0 0 96rpx 96rpx;
}

.ruleDetails .bottom .btn {
  width: 480rpx;
  height: 80rpx;
  font-size: 28rpx;
  color: #fff;
  -webkit-border-radius: 96rpx;
  border-radius: 96rpx;
  background:rgba(245,172,158,1) !important;
}